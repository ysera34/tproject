<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorBackground"
    android:layout_marginBottom="2dp"
    android:gravity="bottom"
    android:orientation="vertical"
    android:weightSum="1"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:paddingTop="25dp"
        android:paddingStart="25dp"
        android:background="@drawable/widget_divider_border">
        <!--android:background="@color/colorWhiteBackground"-->
        <ImageView
            android:id="@+id/nav_header_user_image_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_account_circle_grey_24dp"/>
        <!--app:srcCompat="@android:drawable/sym_def_app_icon"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginEnd="40dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/nav_header_nickname_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:text="@string/user_nickname"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorFont"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

            <TextView
                android:id="@+id/nav_header_user_symptom_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:textSize="14sp"
                android:textColor="@color/colorFont"
                android:text="@string/nav_header_user_symptom"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아토피"
                    android:textSize="12sp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingStart="7dp"
                    android:paddingEnd="7dp"
                    android:layout_marginEnd="4dp"
                    android:textColor="@color/colorPrimaryFont"
                    android:background="@drawable/widget_oval_border_primary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="알러지"
                    android:textSize="12sp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingStart="7dp"
                    android:paddingEnd="7dp"
                    android:textColor="@color/colorPrimaryFont"
                    android:background="@drawable/widget_oval_border_primary"/>

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:paddingTop="15dp"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:gravity="center"
        android:background="@drawable/drawer_top_bottom_border">
        <!--android:background="@color/colorWhiteBackground">-->
        <TextView
            android:layout_width="75dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/nav_header_custom_search_button"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/ic_drawer_custom_search"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/colorFont"
                android:text="@string/nav_item_custom_search"/>

        </LinearLayout>

        <TextView
            android:layout_width="48dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/nav_header_content_button"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/ic_drawer_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/colorFont"
                android:text="@string/nav_item_contents"/>

        </LinearLayout>

        <TextView
            android:layout_width="75dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>
