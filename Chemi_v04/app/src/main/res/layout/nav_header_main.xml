<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorBackground"
    android:layout_marginBottom="2dp"
    android:gravity="bottom"
    android:orientation="vertical"
    android:weightSum="1"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.55"
        android:padding="30dp"
        android:background="@color/colorWhiteBackground">

        <ImageView
            android:id="@+id/nav_header_user_image_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            app:srcCompat="@android:drawable/sym_def_app_icon"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:paddingTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nav_header_nickname_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:text="@string/user_nickname"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorFont"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

            <TextView
                android:id="@+id/nav_header_user_symptom_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorFont"
                android:text="@string/nav_header_user_symptom"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.45"
        android:paddingTop="25dp"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:gravity="center"
        android:background="@color/colorWhiteBackground">
        <!--android:background="@drawable/drawer_bottom_border"-->

        <TextView
            android:layout_width="75dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/nav_header_custom_search_button"
                android:text="@string/nav_item_custom_search"
                android:textColor="@color/colorPrimary"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/drawer_oval_button"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/colorFont"
                android:text="@string/nav_item_custom_search"/>

        </LinearLayout>

        <TextView
            android:layout_width="48dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/nav_header_content_button"
                android:text="@string/nav_item_contents"
                android:textColor="@color/colorPrimary"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/drawer_oval_button"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/colorFont"
                android:text="@string/nav_item_contents"/>

        </LinearLayout>

        <TextView
            android:layout_width="75dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>
