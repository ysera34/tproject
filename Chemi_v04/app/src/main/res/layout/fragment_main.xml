                    android:id="@+id/main_image_switcher_indicator_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_image_switcher_indicator_height"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/main_image_switcher_indicator_margin_bottom"
                    android:gravity="center"
                    android:orientation="horizontal"></LinearLayout>

