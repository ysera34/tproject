<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/content_detail_image_view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="center"/>

            <ImageView
                android:id="@+id/content_detail_image_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="center"/>

            <ImageView
                android:id="@+id/content_detail_image_view3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="center"/>

            <ImageView
                android:id="@+id/content_detail_image_view4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="center"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>