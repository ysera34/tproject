<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/list_item_chemical_card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        card_view:cardCornerRadius="1dp"
        card_view:contentPadding="3dp"
        card_view:cardElevation="0.5dp">

        <!--android:layout_margin="5dp"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:paddingStart="10dp"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/list_item_chemical_title_ko"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="chemical_title"/>

                <TextView
                    android:id="@+id/list_item_chemical_title_eng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="chemical_title_english"/>

            </LinearLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:src="@mipmap/ic_launcher"/>
            
            <TextView
                android:gravity="center"
                android:text="알러지"
                android:textSize="14sp"
                android:textColor="@color/chemical_composition_dangerous_status3_color"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

