<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.tacademy.chemilayout">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.activity.ProductListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.ProductActivity"
            android:parentActivityName="com.tacademy.chemilayout.view.activity.ProductListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tacademy.chemilayout.view.activity.ProductListActivity"/>
        </activity>
        <activity android:name=".view.activity.ProductPagerActivity" />
    </application>

</manifest>